#!/bin/bash

#readonly IMAGE="progrium/consulate"
readonly NAME="smesh"

cmd-ip() {
	local interface_def="$1";
	if [ -z $interface_def ]; then
		interface_def="eth0"
	fi
	ip=$(ifconfig $interface_def | awk -F ' *|:' '/inet addr/{print $4}')
	echo $ip
}

cmd-bootstrap() {
	echo "hello"
}

main() {
	set -eo pipefail
	case "$1" in
	#cmd:run)            shift; cmd-run "$@";;
	cmd:ip)							shift; cmd-ip "$@";;
	cmd:bootstrap)			shift; cmd-bootstrap "$@";;
	*)                  start "$@";;
	esac
}

main "$@"